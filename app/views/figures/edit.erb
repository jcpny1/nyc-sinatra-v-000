<h1>Figure</h1>

<form method="post" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" id="figure_name" name="figure[name]" value=<%= @figure.name %>></p>
  <p>Titles:  <% Title.all.each do |title| %>
              <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>> <%= title.name %>
              <% end %></p>
              <label>and/or, create a new title:</label>
              <p><input  type="text" name="title[name]" id="new_title"></input></p>
  <p>Landmarks: <% Landmark.all.each do |landmark| %>
                <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>> <%= landmark.name %>
                <% end %></p>
                <label>and/or, create a new landmark:</label>
                <p><input  type="text" name="landmark[name]" id="new_landmark"></input></p>
  <br>
  <p><input type="submit" value="Edit Figure"></p>
</form>
